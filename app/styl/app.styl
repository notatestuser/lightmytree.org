@import "../vendor/bootstrap/css/bootstrap.min.css"

box-shadow(x, y, z, colour)
	-webkit-box-shadow x y z colour
	-moz-box-shadow x y z colour
	box-shadow x y z colour

transform-rotate(degs)
	-webkit-transform: rotate(degs)
	-moz-transform: rotate(degs)
	-o-transform: rotate(degs)
	-ms-transform: rotate(degs)
	transform: rotate(degs)


body
	background: #EEECDF
	// padding-top 40px

header
	text-align center
	padding 0 0 50px 0
	margin-bottom 50px
	background transparent url('../img/bg-content-top.jpg') repeat-x scroll center bottom

	.peek-banner
		background transparent url('../img/bg-banner-top-green.png') repeat-x scroll center bottom
		height 50px

	> h1
		font-size 2rem

#main
	margin 0 auto 0 auto

	h2
		font-size 1.3rem

	.sketchpad
		position relative
		.alert-saved
			margin-top 10px

		.sketchpad-editor
			-moz-user-select text
			cursor crosshair
			border 1px solid black
			height 500px

			position relative
			background whiteSmoke
			padding 10px
			border 1px solid rgba(0, 0, 0, 0.150)
			box-shadow(1px, 1px, 2px, rgba(0, 0, 0, 0.18))

		.sketchpad-editor:before
			z-index: -1
			position: absolute
			top: -2px
			left: 0
			content: ''
			width: 100%
			height: 100%
			background-color: whiteSmoke
			border: 1px solid rgba(0, 0, 0, 0.150)

			box-shadow(1px, 1px, 2px, rgba(0, 0, 0, 0.19))

			transform-rotate(2deg)

		.sketchpad-editor:after
			z-index -2
			position absolute
			top 1px
			left -2px
			content ''
			width 100%
			height 100%
			background-color whiteSmoke
			border 1px solid rgba(0, 0, 0, 0.150)

			box-shadow(1px, 1px, 2px, rgba(0, 0, 0, 0.2))

			transform-rotate(358deg)

	ul.charity-picker-view
		list-style-type none
		margin 0

		> li
			border 1px solid black

	.tree-share-view
		.share_preview
			text-align center

		.alert-not-logged-in
			margin-bottom 0
			margin-top 20px

