#main
	margin 0 auto 0 auto

	h2
		font-family 'Lobster',cursive
		font-size 1.3rem

	.sketchpad
		position relative
		.alert-saved
			margin-top 10px

		.sketchpad-editor
			-moz-user-select text
			cursor crosshair
			border 1px solid black
			height 500px

			position relative
			background whiteSmoke
			padding 10px
			border 1px solid rgba(0, 0, 0, 0.150)
			box-shadow(1px, 1px, 2px, rgba(0, 0, 0, 0.18))

			> div
				height 100%

		.sketchpad-editor:before
			z-index: -1
			position: absolute
			top: -2px
			left: 0
			content: ''
			width: 100%
			height: 100%
			background-color: whiteSmoke
			border: 1px solid rgba(0, 0, 0, 0.150)
			box-shadow(1px, 1px, 2px, rgba(0, 0, 0, 0.19))
			transform-rotate(2deg)

		.sketchpad-editor:after
			z-index -2
			position absolute
			top 1px
			left -2px
			content ''
			width 100%
			height 100%
			background-color whiteSmoke
			border 1px solid rgba(0, 0, 0, 0.150)
			box-shadow(1px, 1px, 2px, rgba(0, 0, 0, 0.2))
			transform-rotate(358deg)

		.sketchpad-tools-left
			.pencil
				float right
				margin-left 5px

		.sketchpad-tools-right
			.pencil
				float left
				margin-right 5px

		.sketchpad-tools

			.pencil-blue
				coloured-pencil(#3FC1FF)

			.pencil
				height 240px
				width 30px

				> div
					clear both

				// nib section
				> div:first-child
					> div
						height 15px
						width 33.6%
						margin auto auto
						> div
							float left
							border-bottom 15px solid
						> div:first-child
							border-left 3px solid transparent
							margin-left 1px
						> div:nth-child(2)
							border-left 1px solid
							border-right 1px solid
						> div:last-child
							border-right 3px solid transparent

				// sharpened section
				> div:nth-child(2)
					> div
						float left
						width 0px
						height 0px
					> div:first-child
						border-left 10px solid transparent
						border-bottom 40px solid rgb(204, 182, 135)
					> div:nth-child(2)
						width 4px !important
						border-bottom 40px solid rgb(229, 202, 173)
						border-left 3px solid rgb(204, 182, 135)
						border-right 3px solid rgb(255, 231, 191)
					> div:last-child
						border-bottom 40px solid rgb(255, 231, 191)
						border-right 10px solid transparent

				// long section
				> div:last-child
					height 100%
					width 30px
					background-color rgb(199, 226, 10)
					> div
						float left
						width 33.3%
						height 100%
						margin-top -4px
						padding-bottom 5px
						border-top-left-radius 5px
						border-top-right-radius 5px



