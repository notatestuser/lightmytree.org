		title= title
		meta(name='description', content='Draw a Christmas tree, share it with friends and receive donations in lieu of physical gifts. Ask for a better kind of gift this Christmas.')
		meta(name='author', content='Luke Plaster, notatestuser@gmail.com')

		if openGraphObject
			each content, prop in openGraphObject
				meta(property='#{prop}', content='#{content}')

		meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
		meta(width='device-width', initial-scale=1.0)
		meta(name='viewport', content='width=device-width')

		link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Dancing+Script|Lobster|Lora')
		link(rel='stylesheet', href='/css/app.css?0.4.2')
